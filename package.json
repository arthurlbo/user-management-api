{
    "name": "nestjs",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "pnpm format && pnpm eslint && pnpm test && pnpm test:e2e test/auth.e2e-spec.ts && pnpm test:e2e test/user.e2e-spec.ts",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "dev": "nest start --watch",
        "debug": "nest start --debug --watch",
        "prod": "node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "pretest:e2e": "dotenv -e .env.test -- pnpm clear:db && dotenv -e .env.test -- pnpm migrate:up && dotenv -e .env.test -- pnpm seed",
        "test:e2e": "dotenv -e .env.test -- jest --config ./src/test/jest-e2e.json",
        "posttest:e2e": "dotenv -e .env.test -- pnpm clear:db",
        "prepare": "husky install",
        "commit": "git-cz",
        "migrate:up": "pnpm prisma migrate deploy",
        "clear:db": "pnpm prisma migrate reset --force",
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@nestjs-modules/mailer": "^2.0.2",
        "@nestjs/common": "^10.3.9",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.3.9",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/mapped-types": "^2.0.5",
        "@nestjs/platform-express": "^10.3.9",
        "@nestjs/throttler": "^5.2.0",
        "@prisma/client": "5.15.0",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "nodemailer": "^6.9.13",
        "pug": "^3.0.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@eslint/compat": "^1.1.0",
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.5.0",
        "@nestjs/cli": "^10.3.2",
        "@nestjs/schematics": "^10.1.1",
        "@nestjs/testing": "^10.3.9",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.14.2",
        "@types/nodemailer": "^6.4.15",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "@typescript-eslint/parser": "^7.13.0",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.5.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "globals": "^15.6.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "prettier": "^3.3.2",
        "prisma": "^5.15.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/$1"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
