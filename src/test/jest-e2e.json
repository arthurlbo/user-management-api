{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../../",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "roots": ["<rootDir>/src/test"],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "globalSetup": "<rootDir>/src/test/setup-e2e.ts",
    "globalTeardown": "<rootDir>/src/test/teardown-e2e.ts"
}
